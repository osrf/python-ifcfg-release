#!/usr/bin/make -f
# -*- makefile -*-

# export DH_VERBOSE=1
export PYBUILD_NAME=ifcfg

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_clean:
	dh_clean
	rm -rf src/*.egg-info/

# for some reason the auto pybuild command can not find the python
# modules
override_dh_auto_test:
	PYBUILD_SYSTEM=custom PYBUILD_TEST_ARGS="nosetests" dh_auto_test
